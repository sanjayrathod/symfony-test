{% extends 'base.html.twig' %}

{% block title %}{{ product.title }}{% endblock %}

{% block body %}
    <div class="container">
        <nav aria-label="breadcrumb" class="mt-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_product_index') }}">Products</a></li>
                <li class="breadcrumb-item active">{{ product.title }}</li>
            </ol>
        </nav>

        <div class="row mt-4">
            <div class="col-md-6">
                <img src="{{ product.image }}" class="img-fluid rounded" alt="{{ product.title }}">
            </div>
            <div class="col-md-6">
                <h1>{{ product.title }}</h1>
                <span class="badge bg-secondary mb-3">{{ product.category }}</span>
                <h2 class="text-primary">â‚¹{{ product.price|number_format(2, '.', ',') }}</h2>
                <p class="mt-4">{{ product.shortDescription }}</p>
                <div class="mt-4">
                    <small class="text-muted">Added: {{ product.createdAt|date('Y-m-d') }}</small>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
